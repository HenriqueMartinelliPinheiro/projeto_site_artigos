<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guia Press</title>

    <link rel="stylesheet"  href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"  integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"  crossorigin="anonymous">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/user/articles">
            Artigle
        </a>
    
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/user/articles">Artigos</a>
            </li>
            <%categories.forEach(category=>{%>
                <li class="nav-item"><a class="nav-link" href="/user/category/<%=category.slug%>"><%=category.title%></a></li>
            <%});%>
        </ul>
    </nav>

    <div class="jumbotron">
        <h1 class="display-4">Artigle</h1>
        <p class="lead">Leia os artigos selecionados pelo nossa equipe!</p>
        <hr class="my-4">
      </div>

    <div class="container">
        <%articles.forEach((article)=>{ %>
            <br>
            <div class="card">
                <div class="card-header">
                    <h2><%=article.title%></h2>
                </div>
                <div class="card-body">
                        <a href="/user/article/read/<%=article.slug%>"><button class="btn btn-success">Ler Artigo</button></a>
                </div>
            </div>
       <% }); %>
        <hr>    
       <div class="row">
            <div class="col col-12">
                <%if(result.page!=1){%>
                    <a href="/user/articles/page/<%=result.page-1%>" style="float: right;">< Página Anterior</a>
                <%}%>
                <%if(result.next){%>
                    <a href="/user/articles/page/<%=result.page+1%>" style="float: right;">Próxima Página ></a>
                <%}%>
            </div>
        <hr>
        </div>
        <hr>
    </div>
    
</body>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</html>